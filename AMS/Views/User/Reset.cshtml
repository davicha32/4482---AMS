@model AMS.Models.User

@{
    ViewData["Title"] = "Reset";
}
<body>
<h2>Password Reset</h2>

<p>Reset @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s password</p>

<div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Cancel Reset</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Reset">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="Password" asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID"/>
            <input type="hidden" asp-for="Email"/>
            <div class="form-group">
                <input type="submit" value="Reset" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

</body>
