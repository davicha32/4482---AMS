@model IEnumerable<AMS.Models.Device>

@{
    ViewData["Title"] = "Index";
}

<h2>Devices</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="editItems" data-action="Edit" data-object="Device">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.ID">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Device" asp-action="ArchivedDevices">Archived Devices</a>

<script defer src="~/js/tableRow.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
        });
    </script>
}