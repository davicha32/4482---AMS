@model AMS.Models.Model

@{
    ViewData["Title"] = "Create";
}

<h2>Model</h2>
<div>
    <a asp-action="Index">Cancel</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceID" class="control-label">Device Type</label>
                <select asp-for="DeviceID" id="slDevices" class="form-control" asp-items="ViewBag.Devices">
                    <option selected disabled hidden>-Select One-</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


